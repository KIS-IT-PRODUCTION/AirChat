{
  "expo": {
    "name": "AirChat",
    "slug": "AirChat",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
 "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.airchat.app",
      "config": {
        "googleMapsApiKey": "AIzaSyAKwWqSjapoyrIBnAxnbByX6PMJZWGgzlo"
      },
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Додатку потрібен доступ до вашої геолокації для відображення маршрутів на карті.",
        "NSCameraUsageDescription": "Додатку потрібен доступ до вашої камери, щоб ви могли робити та надсилати фото.",
        "NSPhotoLibraryUsageDescription": "Додатку потрібен доступ до вашої галереї, щоб ви могли надсилати фото.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.airchat.app",
      "config": {
        "googleMaps": {
          "apiKey": "AIzaSyAKwWqSjapoyrIBnAxnbByX6PMJZWGgzlo"
        }
      },
      "permissions": [
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-localization",
      "expo-dev-client",
      [
        "expo-image-picker",
        {
          "photosPermission": "Додатку потрібен доступ до вашої галереї, щоб ви могли надсилати фото.",
          "cameraPermission": "Додатку потрібен доступ до вашої камери, щоб ви могли робити та надсилати фото."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "e5ae05a0-322d-4a51-84d9-84738230258b"
      }
    }
  }
}