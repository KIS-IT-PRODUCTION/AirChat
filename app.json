{
  "expo": {
    "name": "AirChat",
    "slug": "AirChat",
    "scheme": "airchat",
    "version": "1.1.2",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "app.airchat.mobile",
      "config": {
        "googleMapsApiKey": "********************************"
      },
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "LSApplicationQueriesSchemes": [
          "tel",
          "sms"
        ],
        "NSPhotoLibraryUsageDescription": "Додатку потрібен доступ до галереї для вибору фото."
      },
      "appleTeamId": "TX8D8AZ8N5"
    },
  "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/apdative-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "app.airchat.mobile",
      "versionCode": 3,  
      "config": {
        "googleMaps": {
          "apiKey": "********************************"
        }
      },
      "googleServicesFile": "./google-services.json",
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION"
      ],
      "blockedPermissions": [
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.READ_MEDIA_VIDEO"
      ]
    },
    "web": {
      "favicon": "./assets/icon.png"
    },
    "plugins": [
      "expo-localization",
      "expo-dev-client",
      [
        "expo-image-picker",
        {
          "photosPermission": "Додатку потрібен доступ до вашої галереї, щоб ви могли надсилати фото.",
          "cameraPermission": "Додатку потрібен доступ до вашої камери, щоб ви могли робити та надсилати фото."
        }
      ],
      [
        "expo-location",
        {
          "locationWhenInUsePermission": "Цей застосунок потребує доступу до вашої геолокації, щоб ділитися нею з друзями."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/notification.png",
          "color": "#ffffff"
        }
      ],
      "expo-font"
    ],
    "extra": {
      "eas": {
        "projectId": "e5ae05a0-322d-4a51-84d9-84738230258b"
      }
    }
  }
}